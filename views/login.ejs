<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login/Register</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">

  <!-- Header -->
  <header class="fixed top-0 w-full bg-white shadow-md z-10 flex justify-between items-center px-6 py-4">
    <img src="../images/DashobardImages/logo.png" alt="Logo 1" width="100" />
    <nav class="flex space-x-6">
      <a href="index.html" class="text-gray-700 hover:text-blue-600 text-lg">Home</a>
      <a href="about.html" class="text-gray-700 hover:text-blue-600 text-lg">About Us</a>
    </nav>
    <img src="../images/logo2.webp" alt="Logo 2" class="h-12" />
  </header>

  <!-- Main Container -->
  <main class="max-w-4xl h-screen md:h-[450px] bg-zinc-100 mx-auto mt-24 bg-white shadow-lg rounded-lg p-8 md:p-12">
    <h2 class="text-4xl font-bold text-center text-gray-800 mb-10 text-black"><span class="">Sign</span> In</h2>

    <div class="flex flex-col md:flex-row justify-between items-start gap-8 relative">

      <!-- Sign In Form -->
      <form action="/login" method="POST" class="flex-1 w-full space-y-4">
        <div>
          <label for="email" class="block text-sm text-gray-600 font-medium mb-1 text-black">Registered Email ID</label>
          <input type="email" id="email" name="email" placeholder="Enter your email"
            class="w-full  bg-white  border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>
        <div>
          <label for="password" class="block  text-sm text-gray-600 font-medium mb-1 text-black">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter your password"
            class="w-full bg-white   border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 " />
        </div>
        <a href="fgp.html" class="text-blue-600 text-sm hover:underline block mt-1">I forgot my password</a>
        <button type="submit"
          class="w-full bg-blue-600 text-white font-semibold py-2 rounded-md hover:bg-blue-700 transition">Sign In</button>
      </form>

      <!-- Divider with OR -->
      <div class="flex flex-col md:flex-row items-center justify-center bg-black relative ">
        <div class="w-96 h-[1px] md:h-64 md:w-[1px] b"></div>
        <span class="absolute bg-white px-3 py-1 rounded-full shadow text-sm text-gray-600 font-semibold">OR</span>
      </div>

      <!-- Register Section -->
      <div class="flex-1 w-full text-center">
        <h3 class="text-lg font-semibold text-gray-700 mb-6 text-yellow-500"><span class="text-2xl text-black">New</span> user<span class="text-4xl text-red-500 mx-1">?</span></h3>
        <a href="/signup" class="inline-block w-full">
          <button
            class="w-full bg-blue-600 text-white font-semibold py-2 rounded-md hover:bg-blue-700 transition">Register</button>
        </a>
      </div>
    </div>

    <!-- Footer -->
    <footer class="text-center text-sm text-gray-500 mt-10">
      <p>
        How to Register - <a href="#" class="text-blue-600 hover:underline">User Manual</a>
      </p>
    </footer>
  </main>
</body>
</html>
